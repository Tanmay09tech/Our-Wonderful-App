<!DOCTYPE html>
<html lang="en">
  <%- include("includes/head") %>
<body>
  <%- include("includes/Header") %>

 <main>

  <% if(posts.length==0){%>
    <h2>Hello <%= user.username %>, you do not have any posts yet </h2>
<%
  }  else { %>
 <h2>Hello <%= user.username %>, here are your posts </h2>
  
  <% } %>
 <ul>
  <% posts.forEach((post) => { %>
    <li>
      <a href="/post/<%= post.id %>"> <%= post.title %></a> on <%= new Date(post.createdDate).getDate() %>/<%= new Date(post.createdDate).getMonth() + 1 %>/<%= new Date(post.createdDate).getFullYear() %>
    </li>
  <% }) %>
 </ul>
</main>
<%- include("includes/footer") %>
</body>
</html>
